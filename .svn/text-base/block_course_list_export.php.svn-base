<?php
class block_course_list_export extends block_base {
    public function init() {
        $this->title = get_string('pluginname', 'block_course_list_export');
    }

    public function get_content() {
	    if ($this->content !== null) {
	      return $this->content;
	    }
	 
	    $this->content         =  new stdClass;
	    $this->content->text   = '<a class="btn btn-primary" href="../blocks/course_list_export/index.php">Start exporting!</a>';
	    $this->content->footer = '<small>&#8618; Use the above button, to start exporting a list of courses.</small>';

	    if (!empty($this->config->text)) {
		    $this->content->text = $this->config->text;
		}
	 
	    return $this->content;
	}

	public function hide_header() {
		return false;
	}
	
	/*
	public function applicable_formats() {
		return array('course-view' => true);
	}*/
}